<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingBottom="190dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Profile"
            android:paddingBottom="40dp"
            android:paddingTop="20dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:text="Name"
            android:textSize="20dp"
            android:id="@+id/textname"
            android:paddingTop="35dp"

            android:layout_toLeftOf="@+id/textView3"
            android:layout_above="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#a7a1a1"
            android:ems="10"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:text="Email ID"
            android:textSize="20dp"
            android:id="@+id/textemail"
            android:paddingTop="5dp"
            android:paddingBottom="30dp"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:ems="10"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textColor="#a7a1a1"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:text="Account Number"
            android:textSize="20dp"
            android:id="@+id/textaccno"
            android:paddingTop="5dp"
            android:paddingBottom="30dp"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accno"
            android:ems="10"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textColor="#a7a1a1"
            android:focusableInTouchMode="false"

            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:text="IFSC"
            android:textSize="20dp"
            android:id="@+id/textifsc"
            android:paddingTop="5dp"
            android:paddingBottom="30dp"
            android:layout_below="@+id/accno"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ifsc"

            android:ems="10"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textColor="#a7a1a1"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/accno"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:layout_alignRight="@+id/accno"
            android:layout_alignEnd="@+id/accno" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20dp"
            android:id="@+id/textphone"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/ifsc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textColor="#a7a1a1"
            android:focusableInTouchMode="false"

            android:id="@+id/phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textphone"
            android:layout_alignRight="@+id/ifsc"
            android:layout_alignEnd="@+id/ifsc" />


    </RelativeLayout>

</ScrollView>