<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sony.snapnsplit.Snap_Split"
    tools:showIn="@layout/app_bar_snap__split">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#2aa9a9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Account Balance"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 18,000/-"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pay Share"
    android:paddingBottom="10dp"
    android:textSize="20dp"
    android:paddingLeft="45dp"
    android:layout_alignTop="@+id/textView8" />
    <Button
        android:layout_width="195dp"
        android:layout_height="105dp"
        android:padding="0dp"
        android:id="@+id/pay"
        android:background="@drawable/send"
        android:layout_below="@+id/relativeLayout"
        android:layout_toLeftOf="@+id/request1"
        android:layout_toStartOf="@+id/request1"
        android:layout_marginTop="78dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Share"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp"
        android:layout_above="@+id/request1"
        android:layout_alignRight="@+id/request1"
        android:layout_alignEnd="@+id/request1"
        android:id="@+id/textView8" />

    <Button
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:background="@drawable/receive"
        android:paddingLeft="10dp"
        android:id="@+id/request1"
        android:layout_alignBottom="@+id/pay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
/>

</RelativeLayout>
